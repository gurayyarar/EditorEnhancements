{
    "name": "editorenhancements",
    "displayName": "Editor Enhancements",
    "description": "HTML and URL encodings, transformations and sorting of selected text the editor.",
    "version": "1.0.0",
    "publisher": "gurayyarar",
    "icon": "images/icon.png",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/gurayyarar/EditorEnhancements"
    },
    "bugs": {
        "url": "https://github.com/gurayyarar/EditorEnhancements/issues"
    },
    "engines": {
        "vscode": "^1.25.0"
    },
    "keywords": [
        "Encode",
        "Decode",
        "Editor",
        "Sorting",
        "String Transformation"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.editorEnhancement"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.editorEnhancement",
                "title": "Editor Enhancements..."
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "extension.editorEnhancement"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "diacritics": "^1.3.0",
        "html-entities": "^1.2.1",
        "title-case": "^2.1.1"
    }
}
